{
  "name": "restaurant-booking-restapi",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "test": "dotenvx run -f .env.test -- jest",
    "commitlint": "commitlint --verbose --edit",
    "lint": "biome lint",
    "check:staged": "biome check --staged --write --no-errors-on-unmatched",
    "cm": "cz",
    "dev": "dotenvx run -f .env.local -- nodemon ./src/app.ts",
    "dev:compose": "docker compose -f ./dev.docker-compose.yaml up --build --watch",
    "build:image": "docker build --tag 'restaurant-booking-be' .",
    "run:image": "docker run -p 3000:3000 --add-host=host.docker.internal:host-gateway 'restaurant-booking-be'",
    "build": "rimraf dist && npx tsc",
    "start": "dotenvx run -f .env -- node dist/app.js",
    "start:local": "dotenvx run -f .env.local -- node dist/app.js",
    "deploy": "rimraf dist && npx tsc && vercel",
    "db:seed-rests": "dotenvx run -f .env.local -- ts-node ./src/utils/seed-rests.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shevchanski/restaurant-booking-backend.git"
  },
  "author": "Oleksii Shevchenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shevchanski/restaurant-booking-backend/issues"
  },
  "homepage": "https://github.com/shevchanski/restaurant-booking-backend#readme",
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@commitlint/cz-commitlint": "^19.0.3",
    "@faker-js/faker": "^8.4.1",
    "@jest/globals": "^29.7.0",
    "@types/apicache": "^1.6.6",
    "@types/bcrypt": "^5.0.2",
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@typegoose/typegoose": "^12.2.0",
    "apicache": "^1.6.3",
    "aws-sdk": "^2.1634.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-fileupload": "^1.5.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.1",
    "rimraf": "^6.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10"
  }
}
